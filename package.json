{
  "name": "neon-filemanager",
  "version": "0.1.0",
  "description": "File manager for Electron",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonesrussell/neon-filemanager.git"
  },
  "files": [
    "native/index.node",
    "lib"
  ],
  "author": "Russell Jones <jonesrussell42@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "neon-cli": "^0.3.3",
    "node-pre-gyp": "github:amilajack/node-pre-gyp#neon-compat",
    "node-pre-gyp-github": "^1.4.3"
  },
  "scripts": {
    "install": "node-pre-gyp install --fallback-to-build=false || neon build --release",
    "package": "node-pre-gyp package",
    "upload-binary": "node-pre-gyp package && node-pre-gyp-github publish"
  },
  "binary": {
    "module_name": "index",
    "host": "https://github.com/jonesrussell/neon-filemanager/releases/download/",
    "remote_path": "{version}",
    "package_name": "{node_abi}-{platform}-{arch}.tar.gz",
    "module_path": "./native",
    "pkg_path": "."
  }
}
